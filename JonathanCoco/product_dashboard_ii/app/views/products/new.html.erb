<h1> create a new product </h1>

<form action='/products' method='post'>
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <label for "name">Name: </label><input type='text' name='product[name]' value="<%=@product.name%>"> <%=flash[:name] %><br>
  <label for "description">Description: </label><input type='text' name='product[description]' value="<%=@product.description%>"><%=flash[:description] %><br>
  <label for "pricing">Pricing: </label><input type='text' name='product[pricing]' value="<%=@product.pricing%>"><%=flash[:pricing] %><br>
  <select name="product[category_id]">
    <% @categories.each do |category| %>
      <option value="<%=category.id%>"><%=category.category%></option>
    <% end %>
  </select><br>
  <input type='submit' value='Create'>
</form>

