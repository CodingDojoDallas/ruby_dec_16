<html>
    <head>
        <title>Ninja Money</title>
    </head>
    <body>
        <div id="container">
            <p>Your Gold... <%=session[:your_gold] %></p>
            <form action="/rpg/reset" method="get">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <input type="submit" value="reset"/>
            </form>

            <div class="stores">
                <form action="/rpg/process_money/farm" method="post">
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                    <p>Farm</p>
                    <p>(earns 10-20 golds)</p>
                    <!-- <input type="hidden" name="building" value="farm"/> -->
                    <input type="submit" value="Find Gold!"/>
                </form>
            </div>

            <div class="stores">
                <form action="/rpg/process_money/cave" method="post">
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                    <p>Cave</p>
                    <p>(earns 5-10 golds)</p>
                    <!-- <input type="hidden" name="building" value="cave"/> -->
                    <input type="submit" value="Find Gold!"/>
                </form>
            </div>

            <div class="stores">
                <form action="/rpg/process_money/house" method="post">
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                    <p>House</p>
                    <p>(earns 2-5 golds)</p>
                    <!-- <input type="hidden" name="building" value="house"/> -->
                    <input type="submit" value="Find Gold!"/>
                </form>
            </div>

            <div class="stores">
                <form action="/rpg/process_money/casino" method="post">
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                    <p>Casino</p>
                    <p>(earns/takes 0-50 golds)</p>
                    <!-- <input type="hidden" name="building" value="casino"/> -->
                    <input type="submit" value="Find Gold!"/>
                </form>
            </div>

            <div id="activities">
                <select id="ActivityList" size="30">
                    <% session[:your_activities].each do |activity| %>
                        <option value="1" class="<%=activity["color"]%>"><%=activity["activity"]%></option>
                    <% end %>
                </select>
            </div>
    </body>
</html>
