<%= form_for @product do |f| %>
		
		<%= f.collection_select(:category_id, Category.all, :id, :name) %>
		



		<%= f.label :name %>
		<%= f.text_field :name, placeholder: 'name' %>

		<%= f.label :description %>
		<%= f.text_field :description %>

		<%= f.label :price %>
		<%= f.number_field :price %>

		<%= f.submit %>
	<% end %>