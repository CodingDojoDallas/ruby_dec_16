<!DOCTYPE html>
<html>
	<head>
		<title></title>
	</head>
	<body>

	<table>
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>Actions</th>
			</tr>
		</thead>

		<tbody>
			
				
			<% @users.each do |user| %>
			<tr>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.email %></td>
				<td><%= button_to 'Delete', delete_path(user), :method => :delete , :class=>:destroy %></td>
				<td><%= link_to 'Show', delete_path(user), :method => :get %></td>
			</tr>
			<% end %>



			
		</tbody>
	</table>
		<p><%= link_to 'Create', new_path, :method => :get %><p>
	</body>
</html>