<h1>Listing users</h1>

<table>
	<thead>
		<tr>
			<th>First name</th>
			<th>Last name</th>
			<th>Email</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.first_name %></td>
			<td><%= user.last_name %></td>
			<td><%= user.email_address %></td>
			<td>
				<a href="/users/<%= user.id%>">Show</a> | 
				<a href="/users/<%= user.id %>/edit">Edit</a> | 
				<a href="/users/<%= user.id %>" data-method="delete">Destroy</a>
			</td>
		</tr>
		<% end %>
	</tbody>

</table>
<p class="red"><%= flash[:success]%></p>

<a href="/users/new">New User</a>

