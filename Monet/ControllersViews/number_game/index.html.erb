<h1>Welcome to the Great Number Game!</h1>
<p>I am thinking of a number beween 1 and 100</p>
<p>Take a guess!</p>


<form action="/numbers/check_guess" method="post">
	<input type="hidden" 
       value="<%= form_authenticity_token() %>" 
       name="authenticity_token"/>
	<input type="text" name="guess">
	<input type="submit" value="Submit">

</form>

<% if flash[:fail] %>
	<div id="red">
		<%= flash[:fail]%>
	</div>
	
<% end %>
<% if flash[:success] %>
	<div id="green">
		<%= flash[:success]%>
		<a href="/">Play again!</a>
	</div>

<% end %>